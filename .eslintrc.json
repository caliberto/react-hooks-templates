{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": [
            "off",
            "windows"
        ],
        "require-jsdoc": [
            "off",
            "windows"
        ],
        "react/prop-types": [
            "off",
            "windows"
        ],
        "max-len": [
            "off",
            {
                "code": 80,
                "tabWidth": 2
            }
        ],
        "object-curly-spacing": [
            "error",
            "always",
            {
                "arraysInObjects": true,
                "objectsInObjects": true
            }
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "operator-linebreak": [
            "error",
            "after",
            {
                "overrides": {
                    "?": "before",
                    ":": "before"
                }
            }
        ],
        "comma-style": [
            "error",
            "last"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "jsx-quotes": [
            "error", 
            "prefer-single"
        ]
    }
}